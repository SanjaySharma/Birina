<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginperant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_nackground"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:srcCompat="@mipmap/main_logo" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:layout_below="@id/imageView9"
        android:orientation="vertical"
        android:padding="@dimen/_18sdp">



        <android.support.design.widget.TextInputLayout
            android:id="@+id/phoneWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp">

            <EditText
                android:id="@+id/textPhone"
                android:drawablePadding="@dimen/_7sdp"
                android:drawableStart="@android:drawable/ic_menu_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textSize="@dimen/_10sdp"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/siNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/si_no"
                android:textSize="@dimen/_10sdp"
                android:drawableStart="@mipmap/password_ic"
                android:drawablePadding="@dimen/_10sdp"
                 />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp">

            <EditText
                android:id="@+id/textEmail"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableStart="@mipmap/phone_email_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="@dimen/_10sdp"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/usernameWrapper"
            android:layout_marginTop="18dp"
            android:background="@drawable/rounded_blue"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>




</RelativeLayout>
