<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginperant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:focusable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:id="@+id/imageViewParent"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_logo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageViewParent"
        android:orientation="vertical"
        android:paddingRight="@dimen/_18sdp"
        android:paddingLeft="@dimen/_18sdp"
        >


        <android.support.design.widget.TextInputLayout
            android:id="@+id/userNameWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/userName"
                android:drawablePadding="@dimen/_7sdp"
                android:drawableLeft="@mipmap/ic_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_name"
                android:textSize="@dimen/_10sdp"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:inputType="text"
                />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/phoneWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/textPhone"
                android:drawablePadding="@dimen/_7sdp"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textSize="@dimen/_10sdp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:maxLines="1"

                />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/siNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/si_no"
                android:textSize="@dimen/_10sdp"
                android:drawableLeft="@mipmap/password_ic"
                android:drawablePadding="@dimen/_10sdp"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:inputType="text"

                />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/textEmail"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableLeft="@mipmap/phone_email_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:nextFocusDown="@+id/privacyCheck"
                />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <CheckBox
                android:id="@+id/privacyCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/btn_login"

                />

        <TextView
            android:id="@+id/privacyLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:text="@string/privacy_policy"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@id/privacyCheck"
            android:layout_gravity="center_horizontal"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rounded_blue"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:imeOptions="actionDone"
            android:textStyle="bold" />

    </LinearLayout>




</RelativeLayout>
